<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Dataflow{% endblock %}</title>
        <link rel="icon" href="">
        {% block stylesheets %}
            {% include "css.html.twig" %}
        {% endblock %}

        {% block javascripts %}
            {% include "js.html.twig" %}
        {% endblock %}
    </head>
    <body class="h-screen px-[3px] py-[5px] bg-black text-dataflowText overflow-y-auto select-none">
        <!-- Main Container with Sidebar and Content Area -->
        <div class="min-w-full min-h-full max-w-full max-h-full bg-dataflowBackground shadow-neon-teal rounded-md flex border border-gray-500">
            {% block sidebar %}
            {% endblock %}

            <main class="flex-1 p-4 overflow-y-auto transition-all duration-300">
                {% block body %}
                {% endblock %}
            </main>
        </div>
    </body>
    <script>
	    document.addEventListener('DOMContentLoaded', () =>
	    {
		    document.documentElement.style.setProperty('--bg-main', '{{ config.getColorTheme().getBackgroundAccent() }}');
		    document.documentElement.style.setProperty('--bg-secondary', '{{ config.getColorTheme().getBackgroundSecondaryAccent() }}');
		    document.documentElement.style.setProperty('--text-main', '{{ config.getColorTheme().getTextAccent() }}')
		    document.documentElement.style.setProperty('--text-secondary', '{{ config.getColorTheme().getTextSecondaryAccent() }}');
	    });
    </script>
</html>
